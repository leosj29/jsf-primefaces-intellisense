{
    "name": "jsf-primefaces-intellisense",
    "displayName": "JSF Primefaces Intellisense",
    "description": "JSF and Primefaces IntelliSense",
    "version": "1.9.0",
    "publisher": "leosj29",
    "license": "MIT",
    "engines": {
        "vscode": "^1.79.0"
    },
    "repository": {
        "url": "https://github.com/leosj29/jsf-primefaces-intellisense"
    },
    "workspaces": [
        "jsf-lsp-client",
        "jsf-lsp-server"
    ],
    "main": "./client/out/extension.js",
    "keywords": [
        "a4j",
        "html",
        "intellisense",
        "jsf",
        "java",
        "jakarta",
        "server",
        "faces",
        "omnifaces",
        "primefaces",
        "rich",
        "richfaces",
        "xhtml"
    ],
    "categories": [
        "Programming Languages",
        "Snippets",
        "Other"
    ],
    "activationEvents": [
        "onLanguage:html",
        "onLanguage:xml",
        "onLanguage:xhtml",
        "onLanguage:jsfl"
    ],
    "contributes": {
        "commands": [
            {
                "command": "jsf-primefaces-intellisense.cache",
                "title": "JSF and PrimeFaces Cache"
            }
        ],
        "configuration": [
            {
                "title": "JSF and PrimeFaces IntelliSense",
                "properties": {
                    "jsf-primefaces-intellisense.languages": {
                        "type": "array",
                        "description": "A list of HTML based languages where suggestions are enabled.",
                        "default": [
                            "html",
                            "xhtml",
                            "xml",
                            "jsf"
                        ]
                    },
                    "jsf-primefaces-intellisense.primeVersion": {
                        "enum": [
                            "13.0.0",
                            "12.0.0",
                            "11.0.0",
                            "10.0.0",
                            "8.0.0"
                        ],
                        "default": "13.0.0",
                        "description": "PrimeFaces Version."
                    },
                    "jsf-primefaces-intellisense.primeExtVersion": {
                        "enum": [
                            "13.0.0",
                            "12.0.6",
                            "12.0.0",
                            "11.0.0",
                            "10.0.0"
                        ],
                        "default": null,
                        "description": "PrimeFaces Extensions Version. If not set, the configured PrimeFaces Version is used"
                    },
                    "jsf-primefaces-intellisense.omniVersion": {
                        "enum": [
                            "4.0",
                            "3.0"
                        ],
                        "default": "4.0",
                        "description": "OmniFaces Version."
                    },
                    "jsf-primefaces-intellisense.richVersion": {
                        "enum": [
                            "4.5.17"
                        ],
                        "default": "4.5.17",
                        "description": "RichFaces Version."
                    },
                    "jsf-primefaces-intellisense.facesVersion": {
                        "enum": [
                            "4.0",
                            "legacy"
                        ],
                        "default": "4.0",
                        "description": "Faces Version. Legacy is any version pre Jakarta 4.0"
                    }
                }
            }
        ]
    },
    "icon": "images/icon.png",
    "scripts": {
        "vsix": "vsce package",
        "vscode:prepublish": "npm run compile",
        "clean": "cd client && npm run clean && cd ../server && npm run clean && cd ..",
        "compile": "tsc -b",
        "watch": "tsc -b -watch",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint ./client/src ./server/src --ext .ts",
        "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
        "test": "node ./out/test/runTest.js"
    },
    "dependencies": {
        "fast-xml-parser": "^4.2.7",
        "lodash": "^4.17.21",
        "verror": "^1.10.1"
    },
    "devDependencies": {
        "@types/lodash": "^4.14.195",
        "@types/mocha": "^10.0.1",
        "@types/node": "20.3.3",
        "@types/verror": "^1.10.6",
        "@typescript-eslint/eslint-plugin": "^5.61.0",
        "@typescript-eslint/parser": "^5.61.0",
        "@vscode/test-electron": "^2.3.3",
        "eslint": "^8.44.0",
        "mocha": "^10.2.0",
        "typescript": "^5.1.6"
    }
}
