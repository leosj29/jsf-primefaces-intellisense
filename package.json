{
	"name": "jsf-primefaces-intellisense",
	"displayName": "jsf-primefaces-intellisense",
	"description": "JSF and Primefaces IntelliSense",
	"version": "1.0.0",
	"publisher": "leosj29",
	"license": "MIT",
	"engines": {
		"vscode": "^1.66.0"
	},
	"keywords": [
		"autocomplete",
		"html",	
		"intellisense",	
		"jsf",
		"xhtml",
		"primefaces"
	],
	"categories": [
		"Programming Languages",
		"Snippets",
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"contributes": {
		"commands": [
			{
				"command": "jsf-primefaces-intellisense.helloWorld",
				"title": "Hello World"
			},
			{
				"command": "jsf-primefaces-intellisense.cache",
				"title": "JSF and PrimeFaces Cache"
			}
		],
		"configuration": [
			{
				"title": "JSF and PrimeFaces IntelliSense",
				"properties": {
					"jsf-primefaces-intellisense.languages": {
						"type": "array",
						"description": "A list of HTML based languages where suggestions are enabled.",
						"default": [
							"html",
							"xhtml",							
							"xml",
							"jsf"						
						]
					},
					"jsf-primefaces-intellisense.primeVersion": {
						"type": "string",
						"default": "primefaces8",
						"description": "Version of PrimeFaces components(Only primefaces8 or primefaces10)."
					}
				}
			}
		]
	},
	"icon": "images/icon.png",
	"repository": {
		"url": "https://github.com/leosj29/jsf-primefaces-intellisense"
	},
	"main": "./out/extension.js",
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.66.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.16.0",
		"@typescript-eslint/parser": "^5.16.0",
		"eslint": "^8.11.0",
		"glob": "^7.2.0",
		"mocha": "^9.2.2",
		"typescript": "^4.5.5",
		"@vscode/test-electron": "^2.1.3",
		"@types/lodash": "^4.14.181",
		"@types/verror": "^1.10.5"
	},
	"dependencies": {
		"lodash": "^4.17.21",
		"verror": "^1.10.1"
	}
}